<!-- views/delete.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Delete Recipe</title>
  <style>

/* Delete Container */
.delete-container {
  background: linear-gradient(to top, #104942, #87f1f1); ;
  width: 400px;
  height: 200px;
  margin-top: 150px;
  margin-left: 450px;
  padding: 20px;
  text-align: center;
  background-color: #f9f9f9;
  border: 1px solid #ddd;
  border-radius: 10px;
  box-shadow: 0px 2px 4px rgba(161, 13, 13, 0.1);
}

.delete-container h1 {
  font-size: 24px;
  margin-bottom: 10px;
}

.delete-container p {
  font-size: 16px;
  margin-bottom: 20px;
}

/* Delete Button */
.delete-button {
  padding: 10px 20px;
  background-color: #ed5615;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.delete-button:hover {
  background-color: #ec875c;
  color: black;
}

/* Cancel Button */
.cancel-button {
  display: inline-block;
  margin-left: 10px;
  padding: 10px 20px;
  background-color: #7cc033;;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.cancel-button:hover {
  background-color: #65df69;
  color: #0d0d0d;
}

  </style>
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
</head>
<body>
  <%- include('navbar') %>
  <div class="delete-container">
    <h1>Delete Recipe</h1>
    <p>Are you sure you want to delete the recipe?</p>
    <form method="POST" action="/delete/<%= recipeId %>">
      <button type="submit" class="delete-button">Delete</button>
      <a href="/read" class="cancel-button">Cancel</a>
    </form>
  </div>
</body>
</html>
